<?xml version="1.0" ?>
<STATES>
    <!--The Menu State-->
    <MENU>
        <TEXTURES>
            <texture filename="assets/button.png" ID="playbutton"/>
            <texture filename="assets/quit.png" ID="exitbutton"/>
			<texture filename="assets/clouds2.png" ID="clouds2"/>
        </TEXTURES>
		<SOUNDS>
			<sound filename="assets/button.wav" ID="button" type = "1"/>
		</SOUNDS>
        <OBJECTS>
            <!-- Buttons measure for 1024 x 768 resolution-->
            <!-- <object type="MenuButton" x="362" y="234" width="300" height="100" textureID="playbutton"  numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="362" y="468" width="300" height="100" textureID="exitbutton"  numFrames="0" callbackID="2"/> -->
			<object type="ScrollingBackground" x="0" y="0" width="800" height="600" textureID="clouds2" numFrames="0"/>
            <object type="MenuButton" x="250" y="146" width="300" height="100" textureID="playbutton"  numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="250" y="394" width="300" height="100" textureID="exitbutton"  numFrames="0" callbackID="2"/>
        </OBJECTS>
    </MENU>
    <!--The Play State-->
    <PLAY>
        <TEXTURES>
			<texture filename="assets/player.png" ID="player"/>
            <texture filename="assets/run.png" ID="run"/>
		</TEXTURES>
		<SOUNDS>
			<sound filename="assets/jump.wav" ID="jump" type = "1"/>
		</SOUNDS>
		<OBJECTS>
			<object type="Player" x="150" y="150" width="34" height="40" textureID="run" numFrames="10"/>
            <object type="Player" x="100" y="100" width="50" height="50" textureID="run" numFrames="12"/>
            <object type="Enemy" x="500" y="100" width="48" height="48" textureID="player" numFrames="6"/>
        </OBJECTS>
    </PLAY>
    <!-- The Game Over State -->
    <GAMEOVER>
    </GAMEOVER>
</STATES>