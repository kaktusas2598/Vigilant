<?xml version="1.0" ?>
<STATES>
    <!--The Menu State-->
    <MENU next="PLAY">
        <TEXTURES>
            <texture filename="assets/ui/button.png" ID="playbutton"/>
            <texture filename="assets/ui/quit.png" ID="exitbutton"/>
            <texture filename="assets/ui/clouds2.png" ID="clouds2"/>
            <!--<texture filename="assets/particles/bullet2.png" ID="particle"/>-->
            <!--<texture filename="assets/particles/Color/fire/fire_1.png" ID="particle"/>-->
        </TEXTURES>
        <SOUNDS>
            <sound filename="assets/sounds/button.wav" ID="button" type = "1"/>
        </SOUNDS>
        <!--This is problematic because some resources like fonts should really be global across multiple states-->
        <!--Also I would like to be able to add states dynamically using Lua -->
        <FONTS>
            <font filename="assets/fonts/arcade_classic.TTF" ID="arcade"/>
            <font filename="assets/fonts/PixelEmulator.ttf" ID="pixel"/>
        </FONTS>
        <SCRIPTS>
            <script name="state" filename="scripts/main.lua" type="entity"/>
        </SCRIPTS>
        <OBJECTS></OBJECTS>
    </MENU>
    <!--The Play State-->
    <PLAY next="MENU">
        <TEXTURES>
            <texture filename="assets/sprites/player.png" ID="player"/>
            <texture filename="assets/sprites/slime.png" ID="slime"/>
            <texture filename="assets/sprites/skeleton.png" ID="skeleton"/>
            <texture filename="assets/particles/bullet1.png" ID="bullet"/>
            <!--<texture filename="assets/particles/Color/fire/fire_1.png" ID="particle"/>-->
            <texture filename="assets/particles/bullet2.png" ID="particle"/>
            <texture filename="assets/ui/main.png" ID="mainmenubutton"/>
        </TEXTURES>
        <SOUNDS>
            <sound filename="assets/sounds/button.wav" ID="button" type = "1"/>
            <sound filename="assets/sounds/jump.wav" ID="jump" type = "1"/>
            <sound filename="assets/sounds/boom.wav" ID="boom" type = "1"/>
            <sound filename="assets/sounds/phaser.wav" ID="phaser" type = "1"/>
            <sound filename="assets/sounds/DST_ElectroRock.ogg" ID="mainTheme" type = "0"/>
        </SOUNDS>
        <MAPS>
            <map filename="map.tmx" index="1"/>
        </MAPS>
        <SCRIPTS>
            <script name="state" filename="scripts/play.lua" type="entity"/>
        </SCRIPTS>
    </PLAY>
    <!-- The Game Over State -->
    <!--<GAMEOVER>-->
    <!--</GAMEOVER>-->
</STATES>
